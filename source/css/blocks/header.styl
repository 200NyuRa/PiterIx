.header {
	position: absolute
	width: 100%
	top: 0
	left: 0

	@media $phone {
		background: $bgColor
		padding: 8px 0 16px
	}

	&__container {
		container()
	}

	&__contant {
		position: relative
		padding-left: 170px

		@media $tablet {
			padding-left: 124px
		}

		@media $phone {
			padding-left: 0
			display: flex
			align-items: center
			justify-content: space-between
		}
	}

	&__block {
		display: flex
		align-items: center

		@media $tablet {
			flex-grow: 1
		}

		@media $phone {
			width: 100%
			justify-content: space-between
		}
	}

	&__logo {
		position: absolute
		display: flex
		align-items: center
		width: 170px
		height: 100%
		padding-left: 32px
		top: 0
		left: 0

		@media $tablet {
			padding-left: 0
		}

		@media $phone {
			width: 64px
			position: static
		}
	}

	&__logo-img {
		@media $phone {
			width: 100%
			height: auto
		}
	}

	&__top {
		display: flex
		justify-content: space-between
		padding: 8px
		padding-left: 40px
		background: $neutralColor

		@media $tablet {
			padding-left: 8px
		}

		@media $phone {
			flex-direction: column
			align-items: flex-start
			padding-top: 32px
			border-top: 1px solid rgba($neutralDarkColor, .4)
			margin-top: auto
			background: transparent
			order: 1
			width: 100%
		}
	}

	&__bottom {
		display: flex
		justify-content: space-between
		padding: 24px 8px 24px 32px

		@media $tablet {
			padding: 16px 8px
		}

		@media $phone {
			flex-direction: column
		}
	}

	&__contacts {
		display: flex

		@media $phone {
			margin-bottom: 16px
		}
	}

	&__contact-link {
		display: block
		font-weight: bold
		font-size: 14px
		line-height: (16/14)
		text-transform: uppercase
		color: $neutralDarkColor
		padding: 8px
		margin-right: 24px
		transition: color $duration

		@media $tablet {
			margin-right: 0
			font-size: 12px
		}

		&_tel {
			white-space: nowrap
		}

		&:hover {
			faster()
			color: $extraColor
		}

		&:last-child {
			margin-right: 0
		}
	}

	&__lang {
		display: flex
		margin-right: 80px

		@media $tablet {
			margin-right: 24px
			margin-left: auto
		}

		@media $phone {
			margin-left: 0
		}
	}

	&__lang-link {
		display: block
		padding: 8px
		margin-right: 8px
		font-size: 14px
		line-height: (16/14)
		text-transform: uppercase
		font-weight: bold
		color: $textMagicColor
		transition: color $duration


		@media $tablet {
			margin-right: 0
			font-size: 12px
		}

		 &:last-child {
			 margin-right: 0
		 }

		 &:hover,
		 &_active {
			 faster()
			 color: $extraColor
		 }
	}

	&__lang-link {
		display: block
		padding: 8px
		margin-left: 8px
		font-size: 14px
		line-height: (16/14)
		text-transform: uppercase
		font-weight: bold
		color: $textMagicColor
		transition: color $duration

		@media $tablet {
			font-size: 12px
		}

		@media $phone {
			margin-left: 0
		}

		&:last-child {
			margin-left: 0
		}

		&:hover,
		&_active {
			faster()
			color: $extraColor
		}
	}

	&__block-user {
		display: flex
		align-items: center
		position: relative
		padding: 8px

		@media $tablet {
			padding: 0
		}

		&:after {
			content: ''
			position: absolute
			top: 0
			left: 0
			width: 1px
			height: 100%
			background: rgba($neutralDarkColor, .4)

			@media $phone {
				display: none
			}
		}
	}

	&__login {
		icon-login()
		color: $textMagicColor
		padding: 8px
		font-size: 24px
		line-height: 1

		@media $tablet {
			font-size: 22px
		}

		@media $phone {
			display: flex
			align-items: center
		}

		&:hover,
		&_active {
			faster()
			color: darken($extraColor, 20%)
		}

		&:before {
			@media $phone {
				margin-right: 16px
			}
		}
	}

	&__login-text {
		display: none

		@media $phone {
			display: block
			font-size: 12px
			line-height: 1.5
			text-transform: uppercase
			color: $brandColor
			font-weight: 700
		}
	}

	&__menu {
		margin-right: 40px

		@media $tablet {
			margin-right: 32px
		}

		&:last-child {
			margin-right: 0
		}
	}

	&__mobile-menu {
		@media $phone {
			opacity: 0
			position: fixed
			visibility hidden
			opacity: 0
			overflow hidden
			overflow-y auto
			height: 100%
			width: 100%
			top: 0
			left: 0
			font-size: 0
			white-space: nowrap
			overflow: auto
			-webkit-overflow-scrolling: touch
			z-index: 100
			transition visibility $duration , opacity $duration

			&:before {
				content ''
				display: block
				position: fixed
				top: 0
				left: 0
				width: 100%
				height: 100%
				background: rgba($brandColor, .7)
				opacity: 0
				transition: opacity $duration
				z-index: 10
			}
		}
	}

	&__mobile-menu-inner {

		@media $phone {
			transform: translateX(-120%);
			margin-left: 20px
			width: 100%
			max-width: 480px
			min-height: 100vh;
			position: absolute
			top: 0
			left: -20px
			display: flex
			flex-direction: column
			padding: 32px 16px 40px 16px
			background: $bgColor
			transition transform $duration $easeOutCubic
			z-index: 10

			&:before {
				content: ''
				position: absolute
				top: 0
				height: 100vh
				left: 0
				right: 0
				background: $bgColor
				z-index: -1
			}
		}
	}

	&__menu-btn {
		display: none

		@media $phone {
			display: block
		}

	}

	&_open-menu {
		.header__mobile-menu {
			opacity: 1
			visibility: visible
		}

		.header__mobile-menu-inner {
			transform: translateX(0)
		}

		.header__mobile-menu:before {
			opacity: 1
		}
	}

	&__close-mobile {
		display: none

		@media $phone {
			display: block
			position absolute
			display block
			z-index 1002
			size 40px
			padding: 8px
			margin: -8px
			right 16px
			top 28px
			cursor pointer
			color $neutralDarkColor
		}
	}

	&__close-mobile-icon {
		display: block
		size: 24px
		font-size: 24px
		icon-close()

		&:before {
			line-height: 1
		}
	}
}