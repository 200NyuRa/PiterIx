.tabs {
	background: $bgColor
	overflow: hidden
	position: relative

	@media $phone {
		margin-left: -20px
		margin-right: -20px
	}

	&__menu-wrapper {
		justify-content: center
		height: auto!important
		
		&:before {
			content: ''
			display: block
			position: absolute
			background: $neutralColor
			width: 100%
			height: 100%
			left: 0
			top: 0
			transform: skewX(-12deg)

			@media $phone {
				width: auto
				left: -100vw
				right: -100vw
				transform: skewX(0)
			}
		}


		@media $phone {
			background: $neutralColor
			justify-content: flex-start
		}
	}

	&__menu-item {
		padding: 18px 20px
		font-size: 16px
		line-height: (24/16)
		color: $extraColor
		text-transform: uppercase
		position: relative
		transition: color $duration
		width: auto!important
		height: auto!important
		cursor: pointer

		&:after {
			content: ''
			display: block
			position: absolute
			bottom: 0
			left: 0
			right: 0
			margin: 0 auto
			height: 2px
			width: 56px
			background: $brandColor
			opacity: 0
			transition: opacity $duration
		}

		&_active,
		&:hover {
			color: $brandColor

			&:after {
				opacity: 1
			}
		}
	}

}