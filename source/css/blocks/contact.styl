.contact {
	text-align: center

	&__img-wrapper {
		padding-top: 5px
		display: inline-block
		vertical-align: top
		width: (872/1208) * 100 + '%'
		min-width: 280px
		max-width: 872px
		margin-bottom: 40px
		position: relative

		@media $tablet {
			margin-bottom: 24px
		}
	}

	&__img {
		display: block
		width: 100%
		height: auto
	}

	&__item {
		display: block
		margin-bottom: 32px

		@media $tablet {
			margin-bottom: 16px
		}

		&:last-child {
			margin-bottom: 0
		}

		&_mail ^[0]__link {
			display: inline-block
			vertical-align: top
			border-bottom: 2px solid currentColor
			line-height: 0.85;
			text-shadow:
					2px 2px white,
					2px -2px white,
					-2px 2px white,
					-2px -2px white;
		}
	}

	&__link {
		color: $brandColor
		font-size: 48px
		line-height: 1
		transition: color $duration, border-color $duration

		@media $tablet {
			font-size: 32px
		}

		@media $phone {
			font-size: 28px
		}

		&:hover {
			faster()
			color: darken($extraColor, 20%)
			border-color: darken($extraColor, 20%)
		}
	}
	 
}