.table {
	display: flex
	flex-direction column
	border-collapse: collapse
	width: 100%

	tbody {
		display: block
	}

	&_participant {
		& ^[0]__th,
		& ^[0]__td {
			&:nth-child(1) {
				width: (285/1200) * 100 + '%'
				padding-right: 16px

				@media $tablet {
					width: 24%
					padding-right: 8px
				}

				@media $phone {
					width: 100%
					padding-left: 0
					padding-right: 0
				}
			}

			&:nth-child(2) {
				width: (160/1200) * 100 + '%'
				padding-left: 16px
				padding-right: 16px

				@media $tablet {
					width: 16%
					padding-left: 8px
					padding-right: 8px
				}

				@media $phone {
					width: 100%
					padding-left: 0
					padding-right: 0
				}
			}

			&:nth-child(3) {
				width: (208/1200) * 100 + '%'
				padding-left: 16px
				padding-right: 16px

				@media $tablet {
					width: 20%
					padding-left: 8px
					padding-right: 8px
				}

				@media $phone {
					width: 100%
					padding-left: 0
					padding-right: 0
				}
			}
			&:nth-child(4) {
				width: (208/1200) * 100 + '%'
				padding-left: 16px

				@media $tablet {
					width: 20%
					padding-left: 8px
				}
				@media $phone {
					width: 100%
					padding-left: 0
					padding-right: 0
				}
			}

			&:nth-child(5) {
				margin-left: auto
				width: (264/1200) * 100 + '%'
				padding-left: 32px

				@media $tablet {
					width: 20%
					padding-left: 16px
				}
				@media $phone {
					width: 100%
					padding-left: 0
					padding-right: 0
				}
			}
		}
	}

	&_price {
		& ^[0]__th,
		& ^[0]__td {

			&:nth-child(1) {
				width: (416/792) * 100 + '%'
				padding-right: 40px

				@media $phone {
					width: 100%
					padding-right 0
				}
			}
			&:nth-child(2) {
				width: (208/792) * 100 + '%'
				padding-right 0

				@media $phone {
					width: 100%
					padding-right 0
					padding-left 0
				}
			}
			&:nth-child(3) {
				width: (168/792) * 100 + '%'

				@media $phone {
					width: 100%
					padding-left 0
				}
			}
		}
		& ^[0]__td {

			@media $phone {
				padding: 16px 0 16px 0
			}
		}

		& ^[0]__th-mobile {
			width: 50%
			padding-right: 20px
		}
	}

	&_location {
		& ^[0]__th,
		& ^[0]__td {

			&:nth-child(1) {
				width: (416/1000) * 100 + '%'
				position: relative
				padding-right: 10px
				padding-left: 40px

				@media $phone {
					width: 100%
					padding-left: 32px
				}
			}
			&:nth-child(2) {
				width: (104/1000) * 100 + '%'
				padding-right 10px
				padding-left 10px

				@media $phone {
					width: 100%
					padding-left 0
					padding-right 10px
				}
			}
			&:nth-child(3) {
				width: (104/1000) * 100 + '%'
				padding-right 10px
				padding-left 10px

				@media $phone {
					width: 100%
					padding-left 0
				}
			}
			&:nth-child(4) {
				width: (104/1000) * 100 + '%'
				padding-right 10px
				padding-left 10px

				@media $phone {
					width: 100%
					padding-left 0
				}
			}
			&:nth-child(5) {
				width: (168/1000) * 100 + '%'
				padding-right 10px
				padding-left 10px

				@media $phone {
					width: 100%
					padding-left 0
				}
			}
			&:nth-child(6) {
				width: (104/1000) * 100 + '%'
				padding-right 10px
				padding-left 10px

				@media $phone {
					width: 100%
					padding-left 0
				}
			}
		}
		& ^[0]__td {
			align-items: center

			@media $phone {
				padding: 8px 0
			}
		}

		& ^[0]__th-mobile {
			width: 50%
			padding-right: 20px
		}
	}


	&__head {
		display: flex
		background: $neutralColor
		border-bottom: 1px solid rgba($neutralDarkColor, .4)

		@media $phone {
			display: none
		}
	}

	&__row {
		display: flex
		border-bottom: 1px solid rgba($neutralDarkColor, .4)

		&:last-child {
			border-bottom: none
		}

		@media $phone {
			flex-direction: column
		}
	}

	&__row + &__row {
		margin-top: -1px
	}

	&__th {
		display: flex
		align-items: center
		flex-shrink: 0
		color: $neutralDarkColor
		font-size: 18px
		line-height: (16/18)
		padding: 8px 0

		@media $tablet {
			font-size: 14px
		}

		&_center {
			justify-content: center
		}
	}


	&__td {
		display: flex
		flex-wrap: wrap
		flex-shrink: 0
		font-size: 21px
		line-height: (24/21)
		padding: 16px 0
		color: $brandColor

		@media $tablet {
			font-size: 18px
		}

		@media $phone {
			width: 100%
			align-items: center
			padding: 8px 0
			padding-left: 16px
		}

		&_caption {
			font-size: 18px
			line-height: (18/16)
			color: $neutralDarkColor

			@media $tablet {
				font-size: 14px
			}
		}

		&_bold {
			font-weight: bold
		}

		&_existence {
			font-weight: 700
			justify-content: center
			font-size: 21px
			line-height: (24/21)

			@media $tablet {
				font-size: 18px
			}

			@media $phone {
				font-weight: 300
				color: $neutralDarkColor
				justify-content: left
			}
		}

		&_uppercase {
			text-transform: uppercase
		}

		&_head-mobile {
			@media $phone {
				width: 100%
				font-size: 14px
				color: $neutralDarkColor
				line-height: (16/18)
				padding: 8px 0
				line-height: 1.4
				text-align: left
				background: $neutralColor
				border-bottom: 1px solid rgba($neutralDarkColor, .4)
			}
		}
	}

	&__th-mobile {
		@media $phone {
			display: block
			width: 120px
			text-align: left
			text-transform: uppercase
			font-size: 12px
			font-weight: 300
			color: $textColor
		}
	}

	&__link {
		color $brandColor
		display inline
		border-bottom: 1px dashed currentColor
	}

	&__point {
		position: absolute
		left: 0
		top: 0
		bottom: 0
		margin: auto 0
		display: block
		width: 24px
		height: 24px
		font-size: 10px
		line-height: 24px
		color: $textLightColor
		text-align: center
		font-weight: 700
		border-radius: 50%
		background: $accentColor

		@media $phone {
			width: 20px
			height: 20px
			line-height: 20px
		}
	}

	&__caption {
	    color: $neutralDarkColor
		font-size: 18px
		line-height: 1
		display: block
		width: 100%
	}
}