.form {

    &__item {
        margin-bottom 16px

        &_indent-big {
            margin-bottom: 40px
        }

        &:last-child {
            margin-bottom 0
        }
    }

    &__label {
        text-transform: uppercase
        color: $neutralDarkerColor
        display: inline-block
        vertical-align: top
        font-size: 16px
        line-height: (24/16)
        margin-bottom:  8px
    }

    &__label-headline {
        display: flex
        justify-content: space-between
    }

    &__headline-link {
        font-size: 16px
        line-height: 1.5
        display: inline-block
        vertical-align: top
        margin-bottom: 8px
    }

    &__field {
        display block
        width 100%
        padding 16px
        border-radius: 2px;
        background $neutralColor
        border none
        box-shadow: inset 0 -1px 0 0 $neutralLightColor
        font-size: 16px
        line-height: (24/16)
        cursor: pointer
        transition box-shadow $duration

        &:focus,
        &:hover {
            faster()
            box-shadow: inset 0 -1px 0 0 $neutralDarkerColor
        }

        &_full,
        &_full:focus {
            faster()
            box-shadow: inset 0 -1px 0 0 $extraColor
        }

        &.error {
            faster()
            //border-color $errorColor !important
        }
    }

    &__choice-panel {
        display: flex
        overflow: hidden
        justify-content: space-between
        border-radius 2px
        width: 100%
    }

    &__choice-point {
        flex-grow: 1
        flex-shrink: 0

        &:last-child {

            .form__choice-label {
                border-right: none
            }
        }
    }

    &__radio {
        padding: 0
        margin: 0
        width: 0
        height: 0
        border: 0
        position: absolute
        overflow: hidden
        z-index: -1
    }

    &__choice-label {
        display: flex
        align-items: center
        height: 100%
        cursor: pointer
        background: $neutralColor
        color: $extraColor
        font-size: 16px
        line-height: 1
        padding: 20px
        border-right: 1px solid $neutralLightColor

        @media $phone {
            padding: 8px
            font-size: 14px
        }

        &:hover,
        ^[0]__radio:checked + &,
        ^[0]__radio:checked ~ & {
            faster()
            background: $extraColor
            color: $textLightColor
        }
    }

    &__submit {
        width: 100%
    }

    &_submitting {
        .form {
            &__submit {
                cursor default
                pointer-events none
                background #929292 !important
                box-shadow none
            }
        }
    }

    &_submitted {
        .form {
            &__submit {
                cursor default
                pointer-events none
                &:before {
                    opacity 1
                }
            }
        }
    }

}

