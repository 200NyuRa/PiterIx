.slider-logo {
	background: $neutralColor

	@media $phone {
		border-bottom: 4px solid $brandColor
	}

	&:last-child {
		margin-bottom: 0
	}

	&__container {
		container()
		padding: 80px 0 76px
		border-bottom: 4px solid $brandColor

		@media $tablet {
			padding: 64px 0
		}

		@media $phone {
			border: none
		}
	}

	&__title {
		text-align: center
		margin-bottom: 24px
	}

