.headline {
	position: relative
	z-index: 1

	&__container {
		container()
	}

	&__decor {
		position: absolute
		left: 0
		top: 0
		width: 100%
		height: 50%
		background: $neutralColor
		z-index: -1
	}

	&__inner {
		position: relative
		padding 32px 40px 32px 32px
		display: inline-block
		vertical-align: top
		min-width: calc(50% - 20px)
		max-width: calc(75% - 20px)

		@media $tablet {
			max-width: 85%
		}

		@media $phone {
			padding: 24px 24px 32px
		}

		&:after {
			content: ''
			position: absolute
			top: 0
			left: 0
			height: 100%
			width: 100%
			transform skewX(-17deg)
			background: $extraColor
			pointer-events none
		}

		&:before {
			content: ''
			position: absolute
			top: 0
			left: 50%
			height: 100%
			width: 50vw
			transform: translateX(-100%);
			background: $extraColor
			pointer-events none
		}
	}

	&__title {
		font-size: 64px
		line-height: .9
		color: $textLightColor
		font-weight: 700
		position: relative
		z-index: 1

		@media $tablet {
			font-size: 48px
		}

		@media $phone {
			font-size: 40px
		}
	}
}