.hamburger {
	box-sizing content-box
	display: flex
	align-items: center
	justify-content: center
	top: 0;
	left: 0;
	z-index: 1;
	width 24px
	height 14px
	cursor pointer
	padding: 10px
	backface-visibility: hidden

	&__inner {
		position: relative;
		flex: none;
		width: 100%
		height: 2px
		background: $brandColor
		transition: all .35s ease

		&:before,
		&:after {
			content: '';
			position: absolute;
			z-index: 1;
			top: 6px
			left: 0;
			width: 100%
			height: 2px
			background: inherit
			transition: all .35s ease
		}

		&:after {
			top: -6px
		}
	}
}
