.social {
	display: flex

	&__item {
		margin-right: 18px

		&:last-child {
			margin-right: 0
		}

	}

	&__link {
		width: 24px
		height: 24px
		font-size 16px
		display: flex
		align-items: center
		justify-content: center
		border-radius: 50%
		background: $brandColor
		position: relative
		color: $textLightColor
		transition: color $duration

		&:after {
			content: ''
			display: block
			position: absolute
			border-radius: 50%
			top: -1px
			left: -1px
			right: -1px
			bottom: -1px
			overflow: hidden
			margin: auto
			background: $brandColor
			transform scale(.2)
			z-index: 1
			transition: background $duration, transform $duration
		}

		&:before {
			z-index: 2
		}

		&_vk {
			font-size: 16px
			icon-social-vk()

			@media $tablet {
				font-size: 14px
			}
		}

		&_fb {
			font-size: 13px
			icon-social-fb()

			@media $tablet {
				font-size: 12px
			}
		}

		&_tw {
			font-size: 13px
			icon-social-tw()

			@media $tablet {
				font-size: 12px
			}
		}

		&:hover {
			faster()
			color: $brandColor

			&:after {
				faster()
				background: $bgColor
				transform scale(1)
			}
		}
	}
}