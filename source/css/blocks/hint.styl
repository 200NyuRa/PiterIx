.hint {
	position absolute
	opacity 0
	top -500%
	left -500%
	z-index 999
	background transparent
	min-width: 200px
	max-width 260px
	padding: 16px 32px
	min-height 64px
	box-sizing border-box
	display flex
	align-items center
	color $textLightColor
	font-size: 18px
	line-height (16/18)

	@media $phone {
		min-width: 150px
		min-height: 40px
		padding: 16px
	}


	&:before-c {
		content: ""
		display: block
		pointer-events none
		position: absolute
		left: 0
		top: 0
		width: 100%
		height: 100%
		transform-origin: 0 0
		transform: skewX(-12deg)
		background $brandColor
		z-index: -1
	}

	&__triangle {
		left: 13px
		height: 0
		width: 0
		bottom: -14px
		border: 6px solid transparent
		border-top: 8px solid $brandColor
		background: 0 0
		position: absolute
	}

}
