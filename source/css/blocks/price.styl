.price {
	&__note {
		margin-top: 64px
		margin-bottom: 64px
	}

	&__item {
		margin: 0 -20px
		margin-bottom: 80px
		display: flex

		&:last-child {
			margin-bottom: 0
		}

		@media $phone {
			margin-bottom: -1px
			flex-wrap wrap
			border-top: 1px solid rgba($neutralDarkColor,  .4)
			border-bottom: 1px solid rgba($neutralDarkColor,  .4)
		}
	}

	&__item-head {
		position: relative
		width: (4/12) * 100 + '%'
		padding: 0 20px
		font-size: 36px
		line-height: (40/36)
		font-weight: 700
		color: $brandColor
		text-transform: uppercase
		padding-bottom: 48px

		@media $phone {
			width: 100%
			font-size: 24px
			padding: 24px 54px 24px 20px
		}
	}

	&__item-toggle {
		display: none

		@media $phone {
			display: block
			position: absolute
			top: 50%
			margin-top: -20px
			right: 12px
		}
	}

	&__item-toggle-icon {
		display: none

		@media $phone {
			display: block
			position: relative
			cursor: pointer
			width: 40px
			height: 40px
			padding: 8px

			&:before,
			&:after{
				content: ''
				position: absolute;
				background-color: $neutralDarkColor
				transition: transform .4s, background-color $duration
			}

			&:before{
				top: 8px
				bottom: 8px
				left: 50%
				width: 2px
				margin-left: -1px
			}

			&:after {
				top: 50%
				left: 8px
				right: 8px
				height: 2px
				margin-top: -1px
			}

			&:hover {
				&:before,
				&:after {
					faster()
					background-color: darken($neutralDarkColor, 17%)
				}
			}

			^[0]__item-head_active & {
				&:before{
					transform: rotate(90deg)
				}

				&:after{
					transform: rotate(180deg)
				}
			}
		}
	}


	&__item-body {
		width: (8/12) * 100 + '%'
		padding: 0 20px

		@media $phone {
			display: none
			width: 100%
		}
	}
}