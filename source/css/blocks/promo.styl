.promo {
	display: flex
	height: 480px
	color: $textLightColor
	margin-bottom: 80px
	overflow: hidden

	&:last-child {
		margin-bottom: 0
	}

	@media $tablet {
		margin-bottom: 64px
		height: 360px
	}

	@media $phone {
		height: calc(100vh - 70px)
	}

	&__container {
		container()
	}

	&__contant {
		height: 100%
		padding: 88px 116px
		margin: 0 -116px
		display: flex
		align-items: flex-end
		background-repeat: no-repeat
		background-position: 50% 50%
		background-size: cover

		@media $midDesktop {
			margin: 0 -72px
		}

		@media $notebook {
			margin: 0 -30px
		}

		@media $tablet {
			padding: 64px 80px
		}

		@media $phone {
			padding: 24px 20px
			padding-bottom: 52px
			margin: 0 -20px
		}
	}


	&__headline {
		padding-right: 64px
		position: relative

		@media $phone {
			padding-right: 0
		}

		&:before {
			content: ''
			display: block
			position: absolute
			width: 100vw
			top: .8em
			bottom: .4em
			left: -40px
			transform: translateX(-100%)
			background: $extraColor

			@media $phone {
				left: -8px
			}
		}

		&:after {
			content: ''
			display: block
			position absolute
			width: 100vw
			top: .8em
			bottom: .4em
			right: 40px
			transform: translateX(100%)
			background: $extraColor

			@media $phone {
				right: 0
			}
		}
	}


	
	&__title {
		display: block
		font-size: 64px
		line-height: (80/64)
		letter-spacing: -.04em
		font-weight: 700

		@media $tablet {
			font-size: 48px
		}

		@media $phone {
			font-size: 40px
		}
	}
	   
	&__strong {
		max-width: 526px
		font-size: 28px
		line-height: (34/28)
		letter-spacing: -.006em
	}
	
	 
	
	 



}