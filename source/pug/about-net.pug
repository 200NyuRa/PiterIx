block content
    +section({
        container: true,
        headline: {
            container: true,
            title:  'О сети'
        }
    })
        +paragraph({
            columns: [
                {
                    mod: 6,
                    text: '<p>MSK-IX ускоряет коммуникации между интернет-компаниями, ' +
                    'предоставляя нейтральную платформу Internet eXchange для обмена ' +
                    'IP-трафиком между сетями и&nbsp;глобальную распределенную сеть ' +
